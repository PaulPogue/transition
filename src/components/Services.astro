---
import ContactButton from '../components/buttons/ContactButton.astro';
---

<div>
  <div
    class="container relative w-full mx-auto py-8 rounded-lg shadow-xl text-gray-300 bg-[var(--main-theme-color)] mt-25 drop-shadow-[0_0_40px_var(--purple-accent)] z-10"
  >
    <div class="relative z-10 px-10">
      <!-- Section Title -->
      <h2 class="text-4xl font-bold tracking-wide mb-6 text-center">
        Services
      </h2>

      <!-- Services Grid -->
      <div
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 text-lg text-[var(--main-theme-color)] leading-none"
      >
        <!-- Bookkeeping & Financial Management -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">
            Bookkeeping & Financial Management
          </h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">Monthly bookkeeping & reconciliations</li>
            <li class="mt-5">Financial statement preparation</li>
            <li class="mt-5">Expense tracking & cost management</li>
            <li class="mt-5">Accounts payable & receivable</li>
            <li class="mt-5">Budgeting & forecasting</li>
          </ul>
        </div>

        <!-- Tax Planning & Compliance -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">Tax Planning & Compliance</h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">Business tax return preparation</li>
            <li class="mt-5">Quarterly estimated tax payments</li>
            <li class="mt-5">Tax deductions & credits optimization</li>
            <li class="mt-5">Sales tax reporting & compliance</li>
            <li class="mt-5">Payroll tax filings</li>
          </ul>
        </div>

        <!-- QuickBooks & Cloud Accounting -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">
            QuickBooks Online & Cloud Accounting
          </h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">QuickBooks Online setup & optimization</li>
            <li class="mt-5">Migration to cloud-based accounting</li>
            <li class="mt-5">Custom Chart of Accounts setup</li>
            <li class="mt-5">Training & ongoing support</li>
            <li class="mt-5">Third-party app integrations</li>
          </ul>
        </div>

        <!-- Payroll Services -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">Payroll Services</h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">Payroll processing & direct deposit</li>
            <li class="mt-5">Payroll tax calculations & filings</li>
            <li class="mt-5">W-2 & 1099 preparation</li>
            <li class="mt-5">Labor law compliance</li>
          </ul>
        </div>

        <!-- Business Advisory & Consulting -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">
            Business Advisory & Consulting
          </h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">Entity selection & formation</li>
            <li class="mt-5">Cash flow management</li>
            <li class="mt-5">Profitability analysis</li>
            <li class="mt-5">KPI tracking & financial insights</li>
          </ul>
        </div>

        <!-- Business Setup & Compliance -->
        <div class="p-6 bg-gray-200 rounded-lg shadow-md">
          <h3 class="text-2xl font-bold mb-3">Business Setup & Compliance</h3>
          <ul class="space-y-2 ml-6">
            <li class="mt-5">Secretary of State & IRS registration</li>
            <li class="mt-5">EIN & business license assistance</li>
            <li class="mt-5">Sales tax permit applications</li>
            <li class="mt-5">Accounting system setup</li>
          </ul>
        </div>
      </div>

      <!-- Call to Action -->
      <div class="flex justify-center mt-10">
        <ContactButton />
      </div>
    </div>
  </div>
</div>
