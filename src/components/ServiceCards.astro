---
const { class: className = '' } = Astro.props;
import { Image } from 'astro:assets';
import GraphicOnly from '../assets/logos/graphic-only.png';
import CourthouseExterior from '../assets/images/CourthouseExterior.jpg';
import HeroSignup from './buttons/HeroSignup.jsx';
import GetStarted from './buttons/GetStarted.astro';
import PayrollImage from '../assets/images/w2.png';
import TaxImage from '../assets/images/tax.png';
import ThirtyImage from '../assets/images/30.png';
---

<section
  class={`relative w-full h-full overflow-hidden bg-cover bg-center flex flex-col justify-center py-12 ${className}`}
>
  <div class="section-header py-6">
    Find the right solution for your business
  </div>
  <!-- Content (above overlay) -->
  <div class="container relative z-10 mb-">
    <h2 class="text-5xl font-extrabold tracking-tight text-center mb-1">
      <div class="hero-cards">
        <!-- Accounting -->
        <div class="card bg-gradient">
          <h3 class="text-base font-light text-left text-white mb-2">
            Small Business
          </h3>
          <h2 class="text-3xl font-bold text-left text-white text-shadow">
            Accounting
          </h2>
          <div class="card-body-content">
            <p
              class="text-gray-200 font-medium text-lg my-2 text-left text-shadow"
            >
              Small business is our specialty. Whether you need help getting
              started, monthly bookkeeping, periodic financial review, or
              comprehensive accounting support, we provide the clarity and
              insight you need to make confident business decisions.
            </p>
          </div>

          <div class="mt-12">
            <GetStarted
              href="/contact"
              buttonClass="bg-white text-[var(--firmBlue)]"
            />
          </div>

          <!-- Image -->
          <div class="card-thirty">
            <img src={ThirtyImage.src} alt="Experience" loading="lazy" />
          </div>
        </div>

        <!-- Tax -->
        <div class="card bg-[#ebf1ff] card--with-image">
          <h3
            class="text-base font-light text-left text-[var(--firmBlue)] mb-2"
          >
            Small Business & Individual
          </h3>
          <h2 class="text-3xl font-bold text-left text-[var(--firmBlue)]">
            Tax
          </h2>

          <div class="card-body-content">
            <p
              class="text-[var(--firmBlue)] font-medium text-lg my-2 text-left"
            >
              We provide precise and efficient tax preparation for individuals
              and business entities, with careful attention to detail and
              long-term planning. Whether youâ€™re self-employed or operating a
              complex organization, or filing personal returns, we ensure your
              returns are filed correctly and strategically.
            </p>
          </div>

          <div class="mt-12">
            <GetStarted
              href="/contact"
              buttonClass="bg-[var(--firmBlue)] text-white"
            />
          </div>
          <!-- Image -->
          <div class="card-media">
            <img src={TaxImage.src} alt="Payroll" loading="lazy" />
          </div>
        </div>

        <!-- Payroll -->
        <div class="card bg-gray-900 card--with-image">
          <h3 class="text-base font-light text-left text-white mb-2">
            Small Business
          </h3>
          <h2 class="text-3xl font-bold text-left text-white">Payroll</h2>
          <div class="card-body-content">
            <p class="text-gray-200 font-medium text-lg my-2 text-left">
              Today's software has nearly automated payroll. We help you select
              and implement a system that fits your specific needs and
              integrates with your accounting software. For a hands-off
              experience, we also offer full-service solutions where we handle
              every detail for you.
            </p>
          </div>

          <div class="mt-12">
            <GetStarted href="/contact" buttonClass="bg-white text-black" />
          </div>
          <!-- Image -->
          <div class="card-media">
            <img src={PayrollImage.src} alt="Payroll" loading="lazy" />
          </div>
        </div>
      </div>
    </h2>
  </div>
</section>
