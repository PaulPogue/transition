---
import { FaCheck } from 'react-icons/fa';
---

<section class="w-full drop-shadow-[0_0_250px_var(--pink-accent)]">
  <div
    class="container mx-auto bg-[var(--main-theme-color)] px-10 py-5 mt-35 rounded-lg"
  >
    <div class="max-w-6xl mx-auto text-center">
      <h2 class="text-5xl font-bold tracking-tight mb-10">
        Choose the Perfect Bookkeeping Package
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <!-- Essential Package -->
        <div class="bg-white text-black rounded-lg p-6 shadow-lg">
          <h3 class="text-3xl font-bold mb-4">Essential Package</h3>
          <p class="text-lg mb-4">
            Perfect for small businesses that need reliable bookkeeping without
            the extra bells and whistles.
          </p>
          <ul class="text-left space-y-2 mb-4">
            <li>✅ QuickBooks Online setup</li>
            <li>✅ Monthly reconciliations</li>
            <li>✅ Basic financial statements</li>
            <li>✅ Quarterly check-ins</li>
          </ul>
          <p class="text-xl font-semibold mb-4">$200 – $400/month</p>
          <button
            class="bg-[var(--blue-accent)] py-2 px-6 rounded-full hover:bg-[var(--blue-accent)]/80"
          >
            Get Started
          </button>
        </div>

        <!-- Growth Package -->
        <div class="bg-white text-black rounded-lg p-6 shadow-lg">
          <h3 class="text-3xl font-bold mb-4">Growth Package</h3>
          <p class="text-lg mb-4">
            Ideal for growing businesses that need more detailed tracking and
            insights.
          </p>
          <ul class="text-left space-y-2 mb-4">
            <li>✅ Everything in Essential</li>
            <li>✅ Payroll reconciliation</li>
            <li>✅ Accounts receivable & payable</li>
            <li>✅ Monthly financial reports</li>
          </ul>
          <p class="text-xl font-semibold mb-4">$400 – $800/month</p>
          <button
            class="bg-[var(--blue-accent)] py-2 px-6 rounded-full hover:bg-[var(--blue-accent)]/80"
          >
            Get Started
          </button>
        </div>

        <!-- Premium Package -->
        <div class="bg-white text-black rounded-lg p-6 shadow-lg">
          <h3 class="text-3xl font-bold mb-4">Premium Package</h3>
          <p class="text-lg mb-4">
            Comprehensive support for established businesses seeking proactive
            financial guidance.
          </p>
          <ul class="text-left space-y-2 mb-4">
            <li>✅ Everything in Growth</li>
            <li>✅ Weekly updates & reconciliations</li>
            <li>✅ Advanced cash flow management</li>
            <li>✅ Monthly strategy calls</li>
          </ul>
          <p class="text-xl font-semibold mb-4">$800 – $1,500/month</p>
          <button
            class="bg-[var(--blue-accent)] py-2 px-6 rounded-full hover:bg-[var(--blue-accent)]/80"
          >
            Get Started
          </button>
        </div>
      </div>
    </div>
  </div>
</section>
