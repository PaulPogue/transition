---
const { class: className = '' } = Astro.props;
import { Image } from 'astro:assets';
import GraphicOnly from '../assets/logos/graphic-only.png';
import CourthouseExterior from '../assets/images/CourthouseExterior.jpg';
import HeroSignup from './buttons/HeroSignup.jsx';
import LearnMore from './buttons/LearnMore.astro';
import PayrollImage from '../assets/images/w2.png';
import TaxImage from '../assets/images/tax.png';
---

<section
  class={`relative w-full h-full overflow-hidden bg-cover bg-center flex flex-col justify-center py-12 ${className}`}
  style={`background-image: url('${CourthouseExterior.src}');`}
>
  <!-- Overlay (behind content) -->
  <div class="absolute inset-0 bg-[var(--firmDarkBlue)]/50"></div>

  <!-- Content (above overlay) -->
  <div class="container relative z-10 mb-10">
    <h2 class="text-5xl font-extrabold tracking-tight text-center mb-1">
      <span class="text-[#EAAA00] mr-10">Experience.</span>
      <span class="text-[var(--firmLightBlue)] italic">Tradition.</span>
    </h2>

    <h2 class="text-6xl font-semibold tracking-tight text-center
         pb-20">
      <span class="text-gradient-headline">Embracing New Opportunities</span>
    </h2>

    <div class="hero-cards">
      <!-- Accounting -->
      <div class="card bg-gradient">
        <h3 class="text-md text-left text-white mb-4">Small Business</h3>
        <h2 class="text-3xl font-bold text-left text-white text-shadow">
          Accounting
        </h2>
        <div class="card-body-content">
          <p class="text-gray-200 text-xl my-4 text-left text-shadow">
            Small business is our specialty. Whether you help getting started,
            periodic review or full service we have options for you.
          </p>
        </div>

        <div class="mt-12">
          <LearnMore
            href="/contact"
            buttonClass="bg-white text-[var(--firmBlue)]"
          />
        </div>
        <div class="card-stat">30+ yrs</div>
      </div>

      <!-- Tax -->
      <div class="card bg-[#ebf1ff] card--with-image">
        <h3 class="text-md text-left text-[var(--firmBlue)] mb-4">
          Small Business & Individual
        </h3>
        <h2 class="text-3xl font-bold text-left text-[var(--firmBlue)]">Tax</h2>

        <div class="card-body-content">
          <p class="text-[var(--firmBlue)] text-xl my-4 text-left">
            We provide precise and efficient tax preparation for individuals and
            business entities, with careful attention to detail and long-term
            planning. Whether youâ€™re self-employed or operating a complex
            organization, we ensure your returns are filed correctly and
            strategically.
          </p>
        </div>

        <div class="mt-12">
          <LearnMore
            href="/contact"
            buttonClass="bg-[var(--firmBlue)] text-white"
          />
        </div>
        <!-- Image -->
        <div class="card-media">
          <img src={TaxImage.src} alt="Payroll" loading="lazy" />
        </div>
      </div>

      <!-- Payroll -->
      <div class="card bg-gray-900 card--with-image">
        <h3 class="text-md text-left text-white mb-4">Small Business</h3>
        <h2 class="text-3xl font-bold text-left text-white">Payroll</h2>
        <div class="card-body-content">
          <p class="text-gray-200 text-xl my-4 text-left">
            Today's software has nearly automated payroll. We help you select
            and implement a system that fits your specific needs and integrates
            with your accounting software. For a hands-off experience, we also
            offer full-service solutions where we handle every detail for you.
          </p>
        </div>

        <div class="mt-12">
          <LearnMore href="/contact" buttonClass="bg-white text-black" />
        </div>
        <!-- Image -->
        <div class="card-media">
          <img src={PayrollImage.src} alt="Payroll" loading="lazy" />
        </div>
      </div>
    </div>
  </div><div class="absolute bottom-4 right-8 z-0">
    <p
      class="text-white/60 text-xs font-light tracking-widest uppercase italic"
    >
      Muhlenberg County Courthouse &bull; Greenville, KY
    </p>
  </div>
</section>
